FROM nginx:alpine

# Copy nginx configuration (HTTP-only for development)
# For production with SSL, mount the SSL config:
#   -v $(pwd)/nginx/default.ssl.conf:/etc/nginx/conf.d/default.conf
#   -v /etc/letsencrypt:/etc/letsencrypt:ro
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80 443
